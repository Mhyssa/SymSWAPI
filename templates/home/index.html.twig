{% extends 'base.html.twig' %}

{% block title %}Liste des personnages{% endblock %}

{% block body %}

    {% for personnage in personnages %}

        <article>
            <a href={{path
                        ('app_personnage',
                            {'id': personnage.url|replace({'https://swapi.dev/api/people/':'', '/':''})}
                        )
                    }}> 
                {{personnage.name}}
            </a>
        </article>

    {% endfor %}
{% endblock %}
